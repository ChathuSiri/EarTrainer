<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chathura.eartrainer.marks"
    android:id="@+id/layout"
    android:background="@mipmap/background_progress">


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:background="#11FFFFFF"
        android:minWidth="300dp"
        android:progress="10"
        android:max="15"
        android:progressDrawable="@drawable/progressbar"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:text="10"
        android:id="@+id/textNum"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/progressBar"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="86dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:text="/15"
        android:id="@+id/text"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/textNum"
        android:layout_toRightOf="@+id/textNum"
        android:layout_toEndOf="@+id/textNum" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Progress"
        android:id="@+id/PlayButton"
        android:onClick="onProgressClicked"
        android:background= "@drawable/button"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Not bad for a beginner..."
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:id="@+id/textMessage"
        android:layout_below="@+id/textNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
